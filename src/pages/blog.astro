---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));

const pageTitle: string = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>

    <p>
    This is my blog site. I am learning astro cuz i have been thinking about it for a while
    now. I also want to learn React and Next.js. 
    </p>
    <p>
        This is where i will post about my journey learning Astro.
    </p>

    <ul>
        {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title}></BlogPost>)};
    </ul>
</BaseLayout>
