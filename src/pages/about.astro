---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle: string = "About Me";

const identity = {
    firstName: "Carlos",
    country: "Chile",
    occupation: "Computer Science Student",
    hobbies: ["videogames", "programming", "guitar"],
};

const skills = ["HTML", "CSS", "JavaScript", "Express", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "crimson";
const fontWeight = "bold";
const textTransform = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
    <h2>... and my new Astro site!</h2>
    <p>
        I am working thorugh Astro's introductory tutorial. This is the second page on my
        website
    </p>

    <p>
        This site will update as i complete more of the tutorial, so keep checking.
    </p>

    <p>Here are a wef facts about me:</p>
    <ul>
        <li>My name is {identity.firstName} and i am a {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {happy && <p>I am happy to be learning Astro!</p>}
    {finished && <p>I finished this tutorial!</p>}
    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not to finish in 3 days.</p>}

</BaseLayout>

<style is:global define:vars={{ skillColor, fontWeight, textTransform }}>
    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textTransform);
    }
</style>